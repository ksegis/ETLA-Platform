{
  "meta": {
    "schema_version": "1.0.0",
    "brand": "HelixBridge",
    "variant": "Facsimile",
    "watermark_text": "Representation / Not an Original",
    "default_locale": "en-US",
    "pdf_page_size": "LETTER",
    "pdf_margin_in": { "top": 0.5, "right": 0.5, "bottom": 0.5, "left": 0.5 }
  },
  "design_tokens": {
    "colors": {
      "primary": "#6C4CF5",
      "primaryDark": "#4C2FE0",
      "accent": "#20C997",
      "ink": "#12131A",
      "mutedInk": "#5A6072",
      "border": "#E6E8EF",
      "bg": "#FFFFFF",
      "bgSubtle": "#F7F8FC",
      "alert": "#F59E0B",
      "danger": "#EF4444"
    },
    "typography": {
      "font_family": "Inter, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif",
      "mono_family": "JetBrains Mono, ui-monospace, SFMono-Regular, Menlo, Consolas, monospace",
      "scale": {
        "h1": 20,
        "h2": 16,
        "h3": 14,
        "body": 12,
        "small": 10,
        "micro": 9
      },
      "line_height": 1.35
    },
    "layout": {
      "radius": 10,
      "gutter": 12,
      "section_gap": 16,
      "grid_cols": 12
    },
    "watermark": {
      "opacity": 0.12,
      "font_size": 64,
      "angle_deg": -22,
      "repeat": true
    },
    "badges": {
      "FACSIMILE": {
        "label": "FACSIMILE",
        "bg": "#FFF4E5",
        "fg": "#A15700",
        "border": "#FAD7A1"
      }
    }
  },
  "branding": {
    "logo_url": "https://helixbridge.cloud/assets/logo.svg",
    "lockup": "HelixBridge • Data Continuity & Compliance",
    "footer_disclaimer": "This document is an informational facsimile generated by HelixBridge. It is not an original payroll or tax record.",
    "contact_line": "For verification, scan the QR code or visit https://helixbridge.cloud/verify"
  },
  "privacy_rules": {
    "masking": {
      "ssn": { "show": "last4", "mask_char": "•" },
      "ein": { "show": "last4", "mask_char": "•" },
      "bank_account": { "show": "last4", "mask_char": "•" }
    },
    "redact_fields": ["dependent_names", "full_ssn", "bank_routing"],
    "pii_banner": "Certain fields are masked for privacy."
  },
  "verification": {
    "qr_enable": true,
    "qr_caption": "Verify Document",
    "hash_algo": "SHA256",
    "hash_fields": ["employee_id", "employer_id", "period_start", "period_end", "gross_pay", "net_pay", "tax_year", "form_type"],
    "verify_base_url": "https://helixbridge.cloud/verify"
  },
  "templates": {
    "pay_statement": {
      "document_type": "Pay Statement (Facsimile)",
      "sections": [
        { "title": "Employer", "grid": "6/12", "rows_from": "employer_block" },
        { "title": "Employee", "grid": "6/12", "rows_from": "employee_block" },
        {
          "title": "Earnings",
          "grid": "12/12",
          "table": {
            "columns": [
              { "key": "earning_type", "label": "Type", "width": 140 },
              { "key": "hours", "label": "Hours", "align": "right" },
              { "key": "rate", "label": "Rate", "align": "right" },
              { "key": "current", "label": "Current", "align": "right" },
              { "key": "ytd", "label": "YTD", "align": "right" }
            ]
          }
        },
        {
          "title": "Summary",
          "grid": "12/12",
          "key_values": [
            ["Pay Period", "{{period_start}} – {{period_end}}"],
            ["Gross Pay", "{{gross_pay_fmt}}"],
            ["Net Pay", "{{net_pay_fmt}}"],
            ["Pay Date", "{{pay_date}}"]
          ]
        }
      ]
    },
    "timecard": {
      "document_type": "Timecard (Facsimile)",
      "sections": [
        { "title": "Employee", "grid": "6/12", "rows_from": "employee_block" },
        {
          "title": "Time Summary",
          "grid": "12/12",
          "key_values": [
            ["Work Date", "{{work_date}}"],
            ["Clock In", "{{clock_in}}"],
            ["Clock Out", "{{clock_out}}"],
            ["Total Hours", "{{total_hours}}"],
            ["Regular Hours", "{{regular_hours}}"],
            ["Overtime Hours", "{{overtime_hours}}"],
            ["Department", "{{department}}"],
            ["Approval Status", "{{approval_status}}"]
          ]
        }
      ]
    },
    "tax_w2": {
      "document_type": "W-2 (Facsimile)",
      "sections": [
        { "title": "Employee", "grid": "6/12", "rows_from": "employee_block" },
        {
          "title": "W-2 Information",
          "grid": "12/12",
          "key_values": [
            ["Tax Year", "{{tax_year}}"],
            ["Form Type", "{{form_type}}"],
            ["Wages & Compensation", "{{wages_tips_compensation_fmt}}"],
            ["Federal Tax Withheld", "{{federal_income_tax_withheld_fmt}}"],
            ["Social Security Wages", "{{social_security_wages_fmt}}"],
            ["Social Security Tax", "{{social_security_tax_withheld_fmt}}"],
            ["Medicare Wages", "{{medicare_wages_fmt}}"],
            ["Medicare Tax", "{{medicare_tax_withheld_fmt}}"],
            ["State Wages", "{{state_wages_fmt}}"],
            ["State Tax", "{{state_income_tax_fmt}}"]
          ]
        }
      ]
    }
  }
}

